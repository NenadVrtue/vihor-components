---
import Container from "../components/Container.astro";
import Button from "../components/Button.astro";
const { title = "This is a title", subtitle = "This is a subtitle" } =
  Astro.props;
---

<section class="py-24 bg-purple-50">
  <Container>
    <div class="flex flex-col items-center justify-center text-center gap-5">
      <h2>{title}</h2>
      <p class="text-xl text-gray-700">{subtitle}</p>
      <div
        class="w-full flex flex-col items-center justify-center xs:flex-row gap-3 mt-3"
      >
        <Button
          variant="primary"
          link="https://vrtuedigital.com/work/cloudbrain"
          linktext="Get started"
        />
        <Button
          link="https://vrtuedigital.com/work/cloudbrain"
          linktext="Learn more"
        />
      </div>
    </div>
  </Container>
</section>
